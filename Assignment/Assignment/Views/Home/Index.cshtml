@model UserDto
@{
    ViewData["Title"] = "Log in";
}

<div class="row">
    <div class="col-md-4 offset-md-4" style="margin-top:70px;">
        <section>
            <h1 class="text-center mb-5">@ViewData["Title"]</h1>

            <form method="post">
                <div class="form-group mb-1" style="margin-top: 25px;">
                    <label>User Name</label>
                    <input asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label>Password</label>
                    <input asp-for="Password" class="form-control" />
                </div>
                <div class="form-group btn-login m-3">
                    <button id="loginBtn" type="submit" class="btn btn-primary">Log in</button>
                    <a id="checkLogin" class="btn btn-info">Check Login</a>
                </div>
            </form>
        </section>

        <div class="d-none" id="field">
            <div class="row">
                <h2 class="col-md-4" id="token"></h2>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        //When the "Check Login" button is clicked
        $('#checkLogin').on('click', ev => {
            //We make a get request to the api by it url
            //And we get the data that is returned by the
            //Validating method
            $.get('/api/login/token', (data) => {
                //We show the data
                $('#token').text("The token validation returns: " + data);
                $('#field').removeClass('d-none');
                //And we hide the button
                $('#checkLogin').hide();
            });
        });
    </script>
}